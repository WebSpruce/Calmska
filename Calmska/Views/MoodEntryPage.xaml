<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calmska.Views.MoodEntryPage"
             Title="MoodEntryPage">
    <VerticalStackLayout Padding="20">
        <Label Text="How are you feeling today?" FontSize="20" HorizontalOptions="Center" />

        <Entry Placeholder="Enter your mood..." Text="{Binding MoodText, Mode=TwoWay}" />

        <Button Text="Submit" Command="{Binding SubmitMoodCommand}" BackgroundColor="#344E41" TextColor="White" />
    </VerticalStackLayout>
</ContentPage>