<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calmska.Views.PomodoroPage"
             xmlns:controls="clr-namespace:Calmska.Controls"
             BackgroundColor="{DynamicResource MainGreen}"
             Title="PomodoroPage">
    <Grid RowDefinitions="*, Auto">
        <ContentView>
            <Grid>
                <Ellipse Stroke="LightGray" StrokeThickness="7"
                 WidthRequest="200" HeightRequest="200"
                 HorizontalOptions="Center" VerticalOptions="Center"/>

                <GraphicsView x:Name="CircularProgress"
                      WidthRequest="200" HeightRequest="200"
                      HorizontalOptions="Center" VerticalOptions="Center"/>

                <Label Text="{Binding TimeRemaining}"
               FontSize="24" 
               HorizontalOptions="Center"
               VerticalOptions="Center"/>

                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="End" Spacing="30" Margin="0,50,0,0">
                    <Button Text="{Binding PlayPauseButtonText}" HeightRequest="50" Command="{Binding PlayPauseCommand}" BackgroundColor="White"/>
                    <Button Text="Reset" HeightRequest="50" Command="{Binding ResetCommand}" BackgroundColor="White"/>
                </StackLayout>
            </Grid>
        </ContentView>
        <controls:CustomTabBar Grid.Row="1"/>
    </Grid>
</ContentPage>